		<finalName>WebApplication</finalName>
		<plugins>
			<plugin>
				<groupId>org.apahce.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<includes>
						<include>**/test/*.*</include>
