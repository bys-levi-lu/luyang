    <dependency>
        <groupId>spring</groupId>
        <artifactId>spring-context</artifactId>
        <version>4.1.1</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/lib/Spring/spring-context-4.1.1.RELEASE.jar</systemPath>
    </dependency>
    <dependency>
        <groupId>spring</groupId>
        <artifactId>spring-context-support</artifactId>
        <version>4.1.1</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/lib/Spring/spring-context-support-4.1.1.RELEASE.jar</systemPath>
    </dependency>
    <dependency>
        <groupId>spring</groupId>
        <artifactId>spring-jdbc</artifactId>
        <version>4.1.1</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/lib/Spring/spring-jdbc-4.1.1.RELEASE.jar</systemPath>
