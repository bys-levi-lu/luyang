<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
	   http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
	   ">
	   
	<!--Define a business class-->
	<bean id="baseBusiness" class="com.ly.test.simple.aop.BaseBusiness"/>
	<!-- Define some advice class -->
	<bean id="beforeAdvice" class="com.ly.test.simple.aop.BeforeMyAdvice"/>
	<bean id="afterAdvice" class="com.ly.test.simple.aop.AfterMyAdvice"/>
	<bean id="aroundAdvice" class="com.ly.test.simple.aop.AroundMyAdvice"/>
	<!-- Define a point cut class -->
	<bean id="myPointcut" class="com.ly.test.simple.aop.MyPointCut"></bean>
	<!-- 包装通知，指定切点 -->
	<bean id="matchBeforeAdvisor" 
		class="org.springframework.aop.support.DefaultPointcutAdvisor">
		<property name="advice">
			<ref bean="beforeAdvice"/>
		</property>
		<property name="pointcut">
			<ref bean="myPointcut"/>
		</property>
	</bean>
	<!-- Create a proxy object-->
	<bean id="businessProxy" 
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<!-- 代理对象所实现的接口 ，如果有接口可以这样设置 -->
		<property name="proxyInterfaces">
			<value>com.ly.test.simple.aop.IBaseBusiness</value>
		</property>
		<!-- 设置目标对象 -->
		<property name="target">
			<ref bean="baseBusiness" />
		</property>
		<!-- 代理对象所使用的拦截器 -->
		<property name="interceptorNames">
			<list>
				<value>afterAdvice</value>
				<value>matchBeforeAdvisor</value>
				<value>aroundAdvice</value>
			</list>
		</property>
	</bean>
	
	<bean id="aspectBusiness" class="com.ly.test.simple.aop.AspectBusiness"/>
	<bean id="aspectAdvise" class="com.ly.test.simple.aop.AspectAdvise"/>
	<aop:config>
		<aop:aspect id="myAspect" ref="aspectAdvise">
			<aop:pointcut id="myPointcut" 
				expression="execution(* com.ly.test.simple.aop.AspectBusiness.*(..))"/>
			<aop:pointcut id="pointAdd" 
				expression="execution(* com.ly.test.simple.aop.AspectBusiness.add*(..))"/>
			<aop:before method="doBefore" pointcut-ref="pointAdd"/>
			<aop:after-returning method="doAfter" pointcut-ref="myPointcut" 
				returning="result"/>
			<aop:around method="doAround" pointcut-ref="pointAdd"/>
		</aop:aspect>
	</aop:config>
</beans>